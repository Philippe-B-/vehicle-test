{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicles list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Gas</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicle in vehicles %}
            <tr>
                <td><a href="{{ path('vehicle_show', { 'id': vehicle.id }) }}">{{ vehicle.id }}</a></td>
                <td>{{ vehicle.name }}</td>
                <td>{{ vehicle.gas }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicle_show', { 'id': vehicle.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicle_edit', { 'id': vehicle.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicle_new') }}">Create a new vehicle</a>
        </li>
    </ul>
{% endblock %}
