{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicle edit</h1>

    {{ form_start(edit_form) }}
    <div id="appbundle_vehicle" class="container">
        <div class="row">
            <div class="col-1">{{ form_label(edit_form.name) }}</div>
            <div class="col-5">{{ form_widget(edit_form.name) }}</div>
        </div>
        {% if edit_form.gas is defined %}
            <div class="col-1">{{ form_label(edit_form.gas) }}</div>
            <div class="col-5">{{ form_widget(edit_form.gas) }}</div>
        {% endif %}
        <input type="submit" value="Submit" />
    </div>
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('vehicle_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/app/js/formModification.js') }}"></script>
{% endblock %}